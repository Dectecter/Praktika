#include <stdio.h>
#include <string>
#include <locale.h>


int main() {
    setlocale(LC_ALL, "Russian");
    
    int m, n; // размеры массива
    printf("Введите количество строк и столбцов массива: ");
    scanf_s("%d%d", &m, &n);

    int** a = (int**)malloc(m * sizeof(int*)); 
    for (int i = 0; i < m; i++) {
        a[i] = (int*)malloc(n * sizeof(int));
    }

    int count = 0; 
    int mult = 1; 

    printf("Введите элементы массива: ");
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            scanf_s("%d", &a[i][j]);
        }
    }

    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            if ((i > 0 && a[i][j] <= a[i - 1][j]) ||
                (i < m - 1 && a[i][j] <= a[i + 1][j]) ||
                (j > 0 && a[i][j] <= a[i][j - 1]) ||
                (j < n - 1 && a[i][j] <= a[i][j + 1])) {
                continue;
            }
            count++;
            if (a[i][j] % 2 == 1) {
                mult *= a[i][j];
            }
        }
    }

    printf("Количество элементов, больших своих соседей: %d", count);
    printf("Произведение нечетных из этих элементов: %d", mult);

    return 0;
}
